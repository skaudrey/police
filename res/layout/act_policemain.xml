<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wel_bg">
    
     <RelativeLayout
       android:id="@+id/sm_RL_actionbar"
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true" 
       android:background="@drawable/ic_action_bg">

        <TextView
            android:id="@+id/sm_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="警 员" />
    
    </RelativeLayout>

     <Button
         android:id="@+id/pm_btn_info"
         style="@style/btn_wel"
         android:layout_width="160dp"
         android:layout_height="40dp"
         android:layout_alignLeft="@+id/pm_btn_case"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="32dp"
         android:text="个 人 信 息"
         android:textColor="#ffffff"
         android:textSize="20sp" />

     <Button
         android:id="@+id/pm_btn_case"
         style="@style/btn_wel"
         android:layout_width="160dp"
         android:layout_height="40dp"
         android:layout_above="@+id/pm_btn_info"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="24dp"
         android:text="待 查 案 件"
         android:textColor="#ffffff"
         android:textSize="20sp" />

</RelativeLayout>


