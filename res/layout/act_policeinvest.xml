<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
      android:layout_width="fill_parent" 
  android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
 <FrameLayout 
     android:layout_width="fill_parent" 
  android:layout_height="fill_parent">
<ScrollView
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  > 
  
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg">
    
    <RelativeLayout
        android:id="@+id/pcinvest_RL_space"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pcinvest_RL1"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/pcinvest_RL_space"
        android:background="@drawable/layout_bg2">

        <ImageView
            android:id="@+id/pcinvest_im_date"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/im_invest_calendar" />

        <TextView
            android:id="@+id/pcinvest_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/pcinvest_im_date"
            android:textSize="20sp"
            android:text="日期" />

        <EditText
            android:id="@+id/pcinvest_et_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pcinvest_tv_date"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:background="@drawable/login_input_top"/>
        
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pcinvest_RL2"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pcinvest_RL1"
        android:background="@drawable/layout_bg2">

        <ImageView
            android:id="@+id/pcinvest_im_time"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/im_invest_clock" />

        <TextView
            android:id="@+id/pcinvest_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/pcinvest_im_time"
            android:textSize="20sp"
            android:text="时间" />

        <EditText
            android:id="@+id/pcinvest_et_time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pcinvest_tv_time"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:background="@drawable/login_input_top"/>

            
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/pcinvest_RL3"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pcinvest_RL2"
        android:background="@drawable/layout_bg2">

        <ImageView
            android:id="@+id/pcinvest_im_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/im_invest_location" />

        <TextView
            android:id="@+id/pcinvest_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/pcinvest_im_location"
            android:textSize="20sp"
            android:text="地址" />
        <RelativeLayout
        android:id="@+id/pcinvest_RL3_1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/pcinvest_tv_location"
        
        >

        <EditText
            android:id="@+id/pcinvest_et_city"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"            
            android:gravity="center"
            android:singleLine="true"
            android:background="@drawable/login_input_top"/>
        <TextView
            android:id="@+id/pcinvest_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pcinvest_et_city"            
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:text="市"
            android:textSize="20sp" />
        
        <EditText
            android:id="@+id/pcinvest_et_dis"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pcinvest_tv_city"
            android:layout_marginLeft="5dp"  
            android:singleLine="true"          
            android:gravity="center"
            android:background="@drawable/login_input_top"/>
        
        <TextView
            android:id="@+id/pcinvest_tv_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pcinvest_et_dis"            
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:text="区"
            android:textSize="20sp" />
        

            </RelativeLayout>
            
         <RelativeLayout
        android:id="@+id/pcinvest_RL3_2"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/pcinvest_RL3_1"
        android:layout_toRightOf="@+id/pcinvest_tv_location">
                
             <EditText
            android:id="@+id/pcinvest_et_street"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"            
            android:gravity="center"
            android:singleLine="true"
            android:background="@drawable/login_input_top"/>
             <TextView
            android:id="@+id/pcinvest_tv_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pcinvest_et_street"            
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:text="街"
            android:textSize="20sp" />

             <Button
                 android:id="@+id/pcinvest_bt_location"
                 android:layout_width="35dp"
                 android:layout_height="35dp"
                 android:layout_toRightOf="@+id/pcinvest_tv_street"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="7dp"
                 android:background="@drawable/ic_location"
                  />

        </RelativeLayout>
        
    </RelativeLayout>
     <RelativeLayout
        android:id="@+id/pcinvest_RL4"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pcinvest_RL3"
        android:background="@drawable/layout_bg2">

        <ImageView
            android:id="@+id/pcinvest_im_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/im_invest_type" />

        <TextView
            android:id="@+id/pcinvest_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/pcinvest_im_type"
            android:textSize="20sp"
            android:text="类型" />

        <Spinner
            android:id="@+id/pcinvest_sp_type"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/pcinvest_tv_type"
            android:entries="@array/casetypes" />
    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/pcinvest_RL5"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pcinvest_RL4"
        android:background="@drawable/layout_bg2">

        <ImageView
            android:id="@+id/pcinvest_im_criminal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/im_invest_person" />

        <TextView
            android:id="@+id/pcinvest_tv_criminal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/pcinvest_im_criminal"
            android:textSize="20sp"
            android:text="嫌疑人" />
        <EditText
            android:id="@+id/pcinvest_et_criminal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pcinvest_tv_criminal"
            android:layout_marginLeft="15dp"           
            android:gravity="center"
            android:background="@drawable/login_input_top"/>
       

        
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pcinvest_RL6"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pcinvest_RL5"
        android:background="@drawable/layout_bg2">

        <ImageView
            android:id="@+id/pcinvest_im_client"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/im_invest_clients" />

        <TextView
            android:id="@+id/pcinvest_tv_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/pcinvest_im_client"
            android:textSize="20sp"
            android:text="当事人" />
        
        
        <EditText
            android:id="@+id/pcinvest_et_client"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pcinvest_tv_client"
            android:layout_marginLeft="15dp"           
            android:gravity="center"
            android:background="@drawable/login_input_top"/>

        
    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/pcinvest_RL7"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pcinvest_RL6"
        android:background="@drawable/layout_bg2">

        <ImageView
            android:id="@+id/pcinvest_im_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/im_invest_camera" />

        <TextView
            android:id="@+id/pcinvest_tv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/pcinvest_im_photo"
            android:textSize="20sp"
            android:text="照片" />
          <RelativeLayout
        android:id="@+id/pcinvest_RL7_1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/pcinvest_tv_photo"        
        >
             <Button
            android:id="@+id/pcinvest_bt_picture"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dp"           
            android:background="@drawable/ic_camera" />
             </RelativeLayout>

       
         <RelativeLayout
        android:id="@+id/pcinvest_RL7_2"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/pcinvest_RL7_1"
        android:layout_toRightOf="@+id/pcinvest_tv_photo"  >  
        
        <com.policecom.adapter.HorizontalListView
            android:id="@+id/pcinvest_image_list"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"  
			android:layout_toRightOf="@id/case_tv_pic"
			android:layout_below="@id/case_RL5_1"
            android:layout_height="80dp">
          </com.policecom.adapter.HorizontalListView>   
           
        </RelativeLayout>    
    </RelativeLayout>
    <RelativeLayout android:id="@+id/pcinvest_RL8"
         android:layout_width="fill_parent" 
         android:layout_height="100dp" 
         android:layout_alignParentLeft="true" 
         android:layout_below="@+id/pcinvest_RL7">

        <ImageView 
            android:id="@+id/pcinvest_im_describe" 
            android:layout_width="40dp" 
            android:layout_height="40dp" 
            android:layout_alignParentLeft="true" 
            android:layout_centerVertical="true" 
            android:layout_marginLeft="20dp" 
            android:src="@drawable/im_invest_describe" />

        <TextView 
            android:id="@+id/pcinvest_tv_describe" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true" 
            android:layout_marginLeft="20dp" 
            android:layout_toRightOf="@+id/pcinvest_im_describe" 
            android:textSize="20sp" 
            android:text="描述" />

        <EditText 
            android:id="@+id/pcinvest_et_describe" 
            android:layout_width="190dp" 
            android:layout_height="90dp" 
            android:layout_centerVertical="true" 
            android:layout_toRightOf="@+id/pcinvest_tv_describe" 
            android:layout_marginLeft="35dp" 
            android:maxLines="3" 
            android:hint="请输入详细案件信息，最多输入150字" 
            android:gravity="left|top" 
            android:scrollHorizontally="true" 
            android:background="@drawable/login_input_top" 
            android:textSize="18sp" />
    </RelativeLayout>
    <Button android:id="@+id/pcinvest_bt_submit" 
        style="@style/btn_base" 
        android:layout_width="fill_parent" 
        android:layout_height="45dp"
        android:layout_below="@+id/pcinvest_RL8"
        android:text="提 交" 
        android:textSize="20sp" />
  </RelativeLayout>
  
     
    
   
</ScrollView>
</FrameLayout>

 <FrameLayout
     android:layout_width="fill_parent"
     android:layout_height="fill_parent" >

     <RelativeLayout
         android:id="@+id/pcinvest_RL_actionbar"
         android:layout_width="fill_parent"
         android:layout_height="50dp"
         android:background="@drawable/ic_action_bg" >

         <TextView
             android:id="@+id/pcinvest_action"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:text="案 件 详 情 "
             android:textColor="#ffffff"
             android:textSize="20sp" />
     </RelativeLayout>
 </FrameLayout>
     
</FrameLayout>